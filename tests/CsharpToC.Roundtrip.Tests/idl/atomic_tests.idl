        GREEN, 
        BLUE, 
        YELLOW, 
        MAGENTA, 
        CYAN 
    };
    
    @topic
    struct ColorEnumTopic {
        @key long id;
        ColorEnum color;
    };
    
    // ========================================================================
    // SECTION 3: NESTED STRUCTURES
    // ========================================================================
    
    struct Point2D {
